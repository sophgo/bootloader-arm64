[Unit]
Description=Dump hardware topology and locality information to /var/run/hwloc

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/sbin/hwloc-dump-hwdata -o /var/run/hwloc

[Install]
WantedBy=multi-user.target
